{% block panel %}
    <h2>Clients</h2>
    {% if not collector.clients %}
        <div class="empty">
            <p>There are no Contentful clients configured.</p>
        </div>
    {% else %}
        <table class="alt">
            <thead>
            <tr>
                <td>Name</td>
                <td>Service</td>
                <td>API</td>
                <td>Space</td>
            </tr>
            </thead>
            <tbody>
            {% for name, client in collector.clients %}
                <tr>
                    <td>{{ name }}</td>
                    <td>{{ client.service }}</td>
                    <td>{{ client.api }}</td>
                    <td>{{ client.space }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% endif %}
{% endblock %}
